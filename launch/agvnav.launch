<launch>

   <arg name="rec" default="false"/>

   <include file="$(find turtlebot_gazebo)/launch/turtlebot_world.launch">
	<arg name="world_file" value="$(find terrapinavigator)/world/demo1.world"/>
   </include>

   <node name="agvnavigation" pkg="agvnavigator" type="agvnavigator" output="screen"/>

   <node name="record" pkg="rosbag" type="record" args="-a -O $(find agvnavigator)/results/recording.bag -x /camera/(.*)" if="$(arg rec)"/>

</launch>
